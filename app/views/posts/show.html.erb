<p id="notice"><%= notice %></p>

<div class="container">
  <div class="header">
    <h3><%= @post.heading %></h3>
    <p><%= link_to @post.external_url %></p>
  </div>

  <div class="row">
    <div class="col-md-7" id="post-images">
      <% if @images.blank? %>
        <%= image_tag "https://www.theroomlink.co.za/assets/img/no-property-image.png", class: "thumbnail" %>
      <% else %>
        <% @image.each do |image| %>
          <%= image_tag image.url, class: "thumbnail" %>
        <% end %>
      <% end %>
    </div>

    <div class="col-md-5">
      <div class="basic-info">
        <h4>Basic info</h4>

        Price: <%= number_to_currency(@post.price, precision: 0) %> <br>

        Last updated :<%= "#{time_ago_in_words(Time.at(@post.timestamp.to_i))} ago" %> <br>

        <% if @post.neighborhood.present? %>
          Neighborhood: <%= @post.neighborhood %> <br>
        <% end %>

        <% if @post.bedrooms.present? %>
          Bedrooms: <%= @post.bedrooms %> <br>
        <% end %>

        <% if @post.bathroom.present? %>
          Bathrooms: <%= @post.bathroom %> <br>
        <% end %>

        <% if @post.sqft.present? %>
          Square Footage: <%= @post.sqft %> <br>
        <% end %>
      </div>

      <div class="description">
        <h4>Description</h4>
        <%= @post.body %> <br>
      </div>
    </div>
  </div>

</div>
